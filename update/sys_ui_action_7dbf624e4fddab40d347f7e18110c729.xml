        <script><![CDATA[(function () {
	
	//Create an array of field we will copy to the new template record
	var fields = gs.getProperty('x_wegu_er.template_fields').split(',');

	
	var gr = new GlideRecord('x_wegu_er_template');
	gr.newRecord();

	//Populate the template object with the current forms field values
	for (var i = 0; i < fields.length; i++) {
		gr.setValue(fields[i], current.getValue(fields[i]));
	}
	//Insert the record and return the sys_id to be populated on the current record
	gr.insert();
	
	action.setRedirectURL(gr);

})();]]></script>
