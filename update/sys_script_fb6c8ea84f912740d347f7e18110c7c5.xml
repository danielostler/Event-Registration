        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	//Get a GlideRecord object of the event
	var event = current.event_instance.getRefRecord();
	
	//Ensure this update doesn't update the event record sys_updated_on and sys_updated_by timestamps
	event.autoSysFields(false);
	
	//Removed the user from the registered_users glide_list field and update the event record
	var registered_users = event.getValue('registered_users').split(',');
	var index = registered_users.indexOf(current.getValue('user'));
	if (index + 1) {
		event.setValue('registered_users', registered_users.splice(index, 1));
		event.update();
	}
	
	//Set the registration status of the registration record to cancelled
	current.setValue('registration_status', 'Cancelled');

})(current, previous);]]></script>
